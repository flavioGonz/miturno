<script>
    // üñ•Ô∏è HDMI - Actualizar Status y Modos (DRM moderno)
    window.actualizarHdmi = async () => {
        const hdmiName = document.getElementById('hdmiName');
        const hdmiRes = document.getElementById('hdmiRes');
        const hdmiType = document.getElementById('hdmiType');
        const hdmiBadge = document.getElementById('hdmiStatusBadge');
        const select = document.getElementById('hdmiModesSelect');

        // 1. Obtener status actual
        const d = await fetch('/api/hdmi/status', { credentials: 'include' }).then(r => r.json());

        if (d.connected) {
            hdmiName.innerHTML = `
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="3" rx="2"/><line x1="8" x2="16" y1="21" y2="21"/><line x1="12" x2="12" y1="17" y2="21"/></svg>
      ${d.name || 'Monitor HDMI'}
    `;
            hdmiRes.textContent = d.resolution || '--';
            hdmiType.textContent = d.info || 'Digital';
            hdmiBadge.innerHTML = `
      <span class="badge bg-success d-flex align-items-center gap-1" style="padding: 8px 12px; border-radius: 8px;">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
        Conectado
      </span>
    `;
        } else {
            hdmiName.innerHTML = `
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="4.93" x2="19.07" y1="4.93" y2="19.07"/></svg>
      Desconectado
    `;
            hdmiRes.textContent = '--';
            hdmiType.textContent = '--';
            hdmiBadge.innerHTML = `
      <span class="badge bg-danger d-flex align-items-center gap-1" style="padding: 8px 12px; border-radius: 8px;">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="15" x2="9" y1="9" y2="15"/><line x1="9" x2="15" y1="9" y2="15"/></svg>
        Sin Se√±al
      </span>
    `;
        }

        // 2. Cargar modos disponibles
        const m = await fetch('/api/hdmi/modes', { credentials: 'include' }).then(r => r.json());
        if (m.modes && m.modes.length > 0) {
            select.innerHTML = m.modes.map(mode =>
                `<option value="${mode.resolution}">${mode.resolution} (${mode.type})</option>`
            ).join('');
            document.getElementById('btnApplyRes').disabled = false;
        } else {
            select.innerHTML = '<option value="">No se detectaron modos</option>';
        }
    };

    // üî¨ Aplicar Resoluci√≥n
    window.applyHdmiResolution = async () => {
        const select = document.getElementById('hdmiModesSelect');
        const resolution = select.value;
        if (!resolution) return;

        const res = await fetch('/api/hdmi/set-resolution', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ resolution })
        });
        const data = await res.json();
        alert(data.message || data.error);
        setTimeout(actualizarHdmi, 2000);
    };

    // üì∫ Control HDMI Power
    window.controlHdmiPower = async (state) => {
        const res = await fetch('/api/hdmi/power', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ state })
        });
        const data = await res.json();
        if (res.ok) {
            alert(data.message);
            setTimeout(actualizarHdmi, 2000);
        } else {
            alert('Error al controlar la pantalla.');
        }
    };
</script>

